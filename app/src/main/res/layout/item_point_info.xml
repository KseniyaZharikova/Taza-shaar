<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="7dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Агропром Холдинг №1"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/loc_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                app:layout_constraintBottom_toBottomOf="@id/tvAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvAddress" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_items_points"
                android:layout_marginLeft="@dimen/padding_items_points"
                android:layout_marginTop="@dimen/padding_items_points"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Салиева 145/1 (Буденого)"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/loc_image"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

            <ImageView
                android:id="@+id/phone_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iphone"
                app:layout_constraintBottom_toBottomOf="@id/tvPhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvPhone" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_items_points"
                android:layout_marginLeft="@dimen/padding_items_points"
                android:layout_marginTop="@dimen/padding_items_points"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0772 56 89 78"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/phone_image"
                app:layout_constraintTop_toBottomOf="@id/tvAddress" />

            <ImageView
                android:id="@+id/clock_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/clock"
                app:layout_constraintBottom_toBottomOf="@id/tvWorkTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvWorkTime" />

            <TextView
                android:id="@+id/tvWorkTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_items_points"
                android:layout_marginLeft="@dimen/padding_items_points"
                android:layout_marginTop="@dimen/padding_items_points"
                android:layout_weight="1"
                android:gravity="right"
                android:text="9:00-18:00"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@id/clock_image"
                app:layout_constraintTop_toBottomOf="@id/tvPhone" />

            <ImageView
                android:id="@+id/wallet_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/wallet"
                app:layout_constraintBottom_toBottomOf="@id/tvPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvPrice" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_items_points"
                android:layout_marginLeft="@dimen/padding_items_points"
                android:layout_marginTop="@dimen/padding_items_points"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1кг-9 сом"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/wallet_image"
                app:layout_constraintTop_toBottomOf="@id/tvWorkTime" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>